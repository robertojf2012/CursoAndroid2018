<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

    <TextView
            android:text="Bienvenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWelcome" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
            android:textStyle="bold|italic"/>
    <Button
            android:text="Leer Placa"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/tvWelcome"
            android:background="@color/colorPrimary" android:textColor="@android:color/white"/>
    <Button
            android:text="Vehiculos Afiliados"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/button2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/tvWelcome"
            android:background="@color/colorAccent" android:textColor="@android:color/white"/>
</android.support.constraint.ConstraintLayout>