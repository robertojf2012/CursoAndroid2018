<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

    <TextView
            android:text="Bienvenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWelcome" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
            android:textStyle="bold|italic"/>
    <Button
            android:text="Leer Placa"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:id="@+id/btnLeerplaca"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/tvWelcome"
            android:background="@color/colorPrimary" android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <Button
            android:text="Vehiculos Afiliados"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:id="@+id/btngoToVehiculos" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/tvWelcome"
            android:background="@color/colorAccent" android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Datos del vehiculo:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLeerplaca" android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"/>
    <TextView
            android:text="Marca:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textStyle="bold|italic" android:textSize="18sp"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="Modelo:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="18sp" android:textStyle="bold|italic"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="Año:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="18sp" android:textStyle="bold|italic"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="Deuda:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="18sp" android:textStyle="bold|italic"
            android:textColor="@android:color/black"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMarca" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:textSize="18sp" android:textAlignment="viewStart" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvModelo" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvMarca"
            android:textSize="18sp" android:layout_marginStart="100dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAno" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvModelo"
            android:textSize="18sp" android:layout_marginStart="100dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDeuda" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvAno"
            android:textSize="18sp" android:layout_marginStart="100dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Métodos de pago"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:id="@+id/btnMetodos"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/tvWelcome"
            android:background="@color/zxing_custom_viewfinder_laser" android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@+id/btngoToVehiculos" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/btnLeerplaca" android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>