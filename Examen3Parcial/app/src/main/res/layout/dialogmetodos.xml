            app:layout_constraintTop_toBottomOf="@+id/textView8" android:id="@+id/radioGroup">
        <RadioButton
                android:text="Efectivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioEfectivo" android:layout_weight="1"/>
        <RadioButton
                android:text="Tarjeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioTarjeta" android:layout_weight="1"/>
        <RadioButton
                android:text="Transferencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioTransferencia" android:layout_weight="1"/>
    </RadioGroup>
    <Button
            android:text="Pagar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPagar" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/radioGroup"
            android:background="@color/colorAccent"
